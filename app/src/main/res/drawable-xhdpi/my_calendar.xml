<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="2dip" />
            <stroke android:width="0.5dip" android:color="@color/gray_600" />
            <gradient android:angle="-90" android:startColor="@color/gray_600" android:centerColor="@color/white"  android:endColor="@color/gray_600"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="2dip" />
            <stroke android:width="0.5dip" android:color="@color/gray_600" />
            <solid android:color="@color/gray_600"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="2dip" />
            <stroke android:width="0.5dip" android:color="@color/gray_600" />
            <gradient android:angle="-90" android:startColor="@color/gray_600" android:centerColor="@color/white" android:endColor="@color/gray_600" />
        </shape>
    </item>
</selector>